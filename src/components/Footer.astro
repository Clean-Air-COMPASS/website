---
import Icon from '@assets/svg/icon.svg';
import GithubLogo from '@assets/svg/github.svg';
---

<style lang="scss">
  @use '../styles/colors.scss';
  .footer {
    color: white;
    font-family: 'Oswald', sans-serif;

    height: 300px;
    background-color: colors.$primary;
    display: grid;
    grid-template-columns: 2fr 4fr 2fr;
    align-items: center;
    justify-content: center;
    padding: 0 60px;

    .icon-container {
      display: flex;
      align-items: center;

      .brand-title {
        font-family: 'Oxygen', sans-serif;
        font-size: 32px;
        color: white;
        margin: 0 15px;
      }
    }

    .links {
      display: grid;
      grid-template-columns: 1fr 1fr;

      ul {
        list-style: none;
        li {
          a {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 8px;
            font-size: 18px;
            color: white;
            text-decoration: none;
          }
        }
      }
    }
  }

  @media (max-width: 800px) {
    .footer {

            display: grid;
    grid-template-columns: 1fr 1fr;
      .icon-container {
        display: none;
      }
    }
  }
</style>

<footer class="footer">
  <div class="icon-container">
    <Icon fill="#ebf2fa" height={100} />
    <h2 class="brand-title">Clean Air<br />COMPASS</h2>
  </div>
  <div class="links">
    <p>&copy; Clean Air COMPASS</p>
    <ul>
      <li>
        <a href="https://github.com/clean-air-compass"
          ><GithubLogo height={24} width={24} fill="#fff" /> Github</a
        >
      </li>
    </ul>
  </div>
  <div></div>
</footer>
