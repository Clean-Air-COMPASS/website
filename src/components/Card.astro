---
const { title } = Astro.props;
---

<style lang="scss">
  @use '../styles/colors.scss';

  .card {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    background: white;
    border-radius: 20px;

    &__title {
    font-size: 32px;
      font-family: 'Oxygen', sans-serif;
      color: colors.$primary;
    }

    &__body {
      font-family: 'Oswald', sans-serif;
      font-size: 20px;
      padding: 10px 40px;

      .icon {
        display: flex;
        justify-content: center;
        align-items: center;
      }
    }
  }
</style>

<section class="card">
  <h2 class="card__title">{title}</h2>
  <div class="card__body">
    <div class="icon">
      <slot name="icon" />
    </div>
    <slot name="content" />
  </div>
</section>
