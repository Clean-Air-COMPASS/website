---
import Logo from '@assets/svg/logo.svg';
import Icon from '@assets/svg/icon.svg';
---

<style lang="scss">
  @use '../styles/colors.scss';
  .header {
    width: 100%;
    height: 100px;
    background-color: white;
    display: flex;
    align-items: center;
    position: sticky;
    top: 0;
    box-shadow: 0 10px 10px colors.$secondary;

    .container {
      margin: 0 90px;
      width: 100%;
      display: grid;
      grid-template-columns: 3fr 1fr 3fr;

      .full-logo {
        display: block;
      }

      .mobile-logo {
        display: none;
      }

      .nav {
        display: flex;
        justify-content: space-between;
        align-items: center;

        ul {
          display: flex;
          gap: 30px;
          list-style: none;

          li {
            font-size: 1.25rem;
            font-family: 'Oxygen', sans-serif;
            color: colors.$primary;
            a {
              text-decoration: none;
              color: colors.$primary;

              &:visited {
                color: colors.$primary;
              }
            }
          }
        }
      }
    }
  }

  @media (max-width: 800px) {
    .header {
      .container {
        grid-template-columns: 1fr 1fr 1fr;
        margin: 0 10px;

        .full-logo {
          display: none;
        }

        .mobile-logo {
          display: block;
        }
      }
    }
  }
</style>

<header class="header">
  <div class="container">
    <Logo fill="#064789" class="full-logo" height={62} />
    <Icon fill="#064789" class="mobile-logo" height={62} />
    <nav class="nav">
      <ul>
        <li><a class="nav__item" href="/">Home</a></li>
        <li><a class="nav__item" href="/about">About</a></li>
        <li><a class="nav__item" href="/participate">Participate</a></li>
      </ul>
    </nav>
  </div>
</header>
